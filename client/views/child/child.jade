h3 {{child.name}}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        h5 Growth Chart
        table.table.table-bordered.table-hover
          thead
            th Date
            th Weight
            th Length
            th Head
              tbody
                tr(ng-repeat='g in child.growth')
                  td {{g.date | date:'mediumDate'}}
                  td {{g.pounds || 0}} lbs, {{g.ounces}} oz
                  td {{g.feet || 0}} ft, {{g.inches}} in
                  td {{g.head}} "

.row
  .col-xs-3.col-xs-offset-9
    button.btn(ng-click='toggleGrowth()', data-toggle='modal', data-target='#growth') Add to Growth Chart
    include growth

.row
  .col-xs-6
    form(novalidate, name='milestoneForm', role='form', ng-show='showMilestone')
      .row
        .col-xs-6
          h4 Milestones
          .form-group
            label(for='mdate') Date
            input.form-control#mdate(type='date', name='mdate', ng-model='milestone.mdate', autofocus)
          .form-group
            label(for='milestone') Milestone
            input.form-control#milestone(type='text', name='milestone', ng-model='milestone.name')
          button.btn#update(ng-click='addMilestone()') Add Milestone

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        h5 Milestones
        table.table.table-bordered.table-hover
          thead
            th Date
            th Milestone
              tbody
                tr(ng-repeat='m in child.milestones')
                  td {{m.mdate | date:'mediumDate'}}
                  td {{m.name}}

.row
  .col-xs-3.col-xs-offset-9
    button.btn(ng-click='toggleMilestone()', ng-hide='showMilestone') Add a milestone

.row
  .col-xs-6
    form(novalidate, name='apptsForm', role='form', ng-show='showAppts')
      .row
        .col-xs-6
          h4 Doctor Appointments
          .form-group
            label(for='adate') Date
            input.form-control#adate(name='adate', type='date', ng-model='appt.adate', autofocus)
          .form-group
            label(for='time') Time
            input.form-control#time(name='time', type='time', ng-model='appt.time', autofocus)
          .form-group
            label(for='drname') Doctor
            input.form-control#drname(type='text', name='drname', ng-model='appt.drname')
          button.btn#update(ng-click='addAppt()') Add Appts

.row
  .col-xs-12
    .panel.panel-default(ng-hide='hidePanel')
      .panel-body
        h5 Doctor Appointments
        table.table.table-bordered.table-hover
          thead
            th Date
            th Time
            th Doctor
              tbody
                tr(ng-repeat='a in child.appts')
                  td {{a.adate | date:'mediumDate'}}
                  td {{a.time | date:'shortTime'}}
                  td {{a.drname}}

.row
  .col-xs-3.col-xs-offset-9
    button.btn(ng-click='toggleAppts()', ng-hide='showAppts') Add appt
