h3 {{child.name}}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        h5 Growth Chart
        table.table.table-bordered.table-hover
          thead
            th Date
            th Weight
            th Length
            th Head Circumference
              tbody
                tr(ng-repeat='g in child.growth')
                  td {{g.date | date:'mediumDate'}}
                  td {{g.pounds || 0}} lbs, {{g.ounces}} oz
                  td {{g.feet || 0}} ft, {{g.inches}} in
                  td {{g.head}} "

.row
  .col-xs-3
    button.btn.child(ng-click='toggleGrowth()', data-toggle='modal', data-target='#growth') Add to Growth Chart
    include growth

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        h5 Milestones
        table.table.table-bordered.table-hover
          thead
            th Date
            th Milestone
              tbody
                tr(ng-repeat='m in child.milestones')
                  td {{m.mdate | date:'mediumDate'}}
                  td {{m.name}}

.row
  .col-xs-3.col
    button.btn.child(ng-click='toggleMilestone()', data-toggle='modal', data-target='#milestone') Add a Milestone
    include milestone

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        h5 Doctor Appointments
        table.table.table-bordered.table-hover
          thead
            th Date
            th Time
            th Doctor
              tbody
                tr(ng-repeat='a in child.appts')
                  td: a(href='/#/child/{{c._id}}') {{a.adate | date:'mediumDate'}}
                  td {{a.time | date:'shortTime'}}
                  td {{a.drname}}

.row
  .col-xs-3.col
    button.btn(ng-click='toggleAppts()', data-toggle='modal', data-target='#appt') Add appt
    include appt
